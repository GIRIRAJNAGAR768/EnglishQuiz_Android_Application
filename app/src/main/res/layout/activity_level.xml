<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ad="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2">
 <com.google.android.gms.ads.AdView
     android:id="@+id/adView1"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     ad:adSize="BANNER"
     android:layout_marginBottom="2sp"
     android:background="#80060608"
     android:layout_alignParentTop="true"
     ad:adUnitId="@string/banner1">
 </com.google.android.gms.ads.AdView>
 <LinearLayout
     android:id="@+id/ll"
     android:layout_centerInParent="true"
     android:orientation="vertical"
     android:layout_below="@+id/adView1"
     android:layout_above="@+id/adView2"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
  <TextView
      android:id="@+id/LevelName"
      android:layout_marginTop="10sp"
      android:textSize="30sp"
      android:padding="4sp"
      android:textColor="#ffffff"
      android:textStyle="bold"
      android:text="demo"
      android:layout_gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  <ListView
      android:id="@+id/sublevleslistid"
      android:layout_margin="20sp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
 </LinearLayout>

 <com.google.android.gms.ads.AdView
     android:id="@+id/adView2"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     ad:adSize="BANNER"
     android:layout_marginTop="2sp"
     android:background="#80060608"
     android:layout_alignParentBottom="true"
     ad:adUnitId="@string/banner2">
 </com.google.android.gms.ads.AdView>

</RelativeLayout>