<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ad="http://schemas.android.com/apk/res-auto"
    android:background="#2A1C49"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2A1C49"
        android:weightSum="3"
        android:orientation="vertical"
        tools:context="english.grammar.quizapp.SpeakToText">

        <EditText
            android:id="@+id/txvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="30sp"
            android:padding="10sp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="normal"/>

        <LinearLayout
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/copy"
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="30sp"
                android:paddingRight="30sp"
                android:text="copy"
                android:background="@drawable/mainbuttnbackexergrid"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/btnSpeak"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:onClick="getSpeechInput"
                android:src="@drawable/ic_mic"/>

            <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="30sp"
                android:paddingRight="30sp"
                android:text="reset"
                android:background="@drawable/mainbuttnbackexergrid"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_margin="10sp"
            android:padding="10sp"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:text="click on mike to speak something"
            android:textSize="20sp"
            android:textStyle="bold"/>


        <com.google.android.gms.ads.AdView
            android:id="@+id/adView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ad:adSize="BANNER"
            android:layout_marginTop="20sp"
            ad:adUnitId="@string/banner1">
        </com.google.android.gms.ads.AdView>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ad:adSize="BANNER"
            android:layout_marginTop="3sp"
            ad:adUnitId="@string/banner2">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>
</ScrollView>