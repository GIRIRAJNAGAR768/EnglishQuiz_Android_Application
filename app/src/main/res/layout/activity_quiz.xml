<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ad="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A1C49"
    >

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView1"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ad:adSize="BANNER"
        android:background="#2A1C49"
        android:layout_marginBottom="5sp"
        ad:adUnitId="@string/banner1">
    </com.google.android.gms.ads.AdView>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ad="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_below="@+id/adView1"
    android:layout_height="match_parent"
    android:background="#2A1C49">
<LinearLayout
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
          android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="10sp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10sp"
                android:background="@drawable/buttnbackexergridquiz"
                android:layout_margin="5sp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:weightSum="2">

            <LinearLayout
                android:weightSum="3"
                android:layout_margin="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/levellabel"
                    android:text="Beginner"
                    android:background="@drawable/buttnbackquizquestion"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:padding="4sp"
                    android:layout_margin="2sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/levelnumber"
                    android:padding="4sp"
                    android:layout_margin="2sp"
                    android:background="@drawable/buttnbackquizquestion"
                    android:text="Level 1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/lives"
                    android:text="Beginner"
                    android:background="@drawable/buttnbackquizquestion"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:padding="4sp"
                    android:layout_margin="2sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

               <!-- <TextView
                    android:id="@+id/lives"
                    android:text="3"
                    android:padding="4sp"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:background="@drawable/buttnbackquizquestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />-->
            </LinearLayout>
            <LinearLayout
                android:layout_margin="10sp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/points"
                    android:text="Points: 20"
                    android:background="@drawable/buttnbackquizquestion"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:padding="4sp"
                    android:layout_margin="2sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
               <!-- <TextView
                    android:textSize="20sp"
                    android:id="@+id/points"
                    android:text="20"
                    android:gravity="left"
                    android:layout_margin="5sp"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />-->
                <TextView
                    android:id="@+id/qn"
                    android:text="Que>No: 10"
                    android:background="@drawable/buttnbackquizquestion"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:padding="4sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
              <!--  <TextView
                    android:textSize="20sp"
                    android:id="@+id/qn"
                    android:text="10"
                    android:gravity="left"
                    android:background="@drawable/buttnbackquizquestion"
                    android:layout_margin="5sp"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />-->
            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10sp"
                android:background="@drawable/buttnbackexergridquiz"
                android:layout_margin="5sp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:weightSum="5">
            <TextView
                android:id="@+id/qiestion"
                android:textSize="28sp"
                android:gravity="center"
                android:padding="5sp"
                android:textColor="#ffffff"
                android:layout_margin="10sp"
                android:background="@drawable/buttnbackquizquestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <Button
                android:id="@+id/option0"
                android:textSize="25sp"
                android:background="@drawable/buttnbackexergridoption"
                android:layout_marginTop="5sp"
                android:padding="2sp"
                android:layout_marginRight="10sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Button>
            <Button
                android:id="@+id/option1"
                android:textSize="25sp"
                android:background="@drawable/buttnbackexergridoption"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:padding="2sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp">
            </Button>
            <Button
                android:id="@+id/option2"
                android:textSize="25sp"
                android:background="@drawable/buttnbackexergridoption"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:padding="2sp"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp">
            </Button>
            <Button
                android:id="@+id/option3"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:background="@drawable/buttnbackexergridoption"
                android:layout_width="match_parent"
                android:padding="2sp"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="20sp">
            </Button>
            </LinearLayout>

        </LinearLayout>








</LinearLayout>
    </ScrollView>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ad:adSize="BANNER"
        android:background="#2A1C49"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15sp"
        ad:adUnitId="@string/banner2">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>